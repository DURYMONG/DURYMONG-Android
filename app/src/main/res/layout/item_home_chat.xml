<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_detail_chat_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suite_regular"
        android:paddingTop="20dp"
        android:text="2024년 9월 30일"
        android:textColor="@color/gray3"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_detail_chat_character"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/v_settings_edit_text_radius_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_chat_date" />

    <!--채팅 이미지 전체 회의에서 질문 후 수정 필요 / 유저의 몽 이미지로 추정-->
    <TextView
        android:id="@+id/tv_detail_chat_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/img_home_chat_white"
        android:fontFamily="@font/suite_regular"
        android:text="오늘은 무엇을 먹었나요?"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/iv_detail_chat_character"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_chat_date" />

    <TextView
        android:id="@+id/tv_detail_chat_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/img_home_chat_dark"
        android:fontFamily="@font/suite_medium"
        android:text="아침에 토스트, 점심에 샐러드"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_chat_question" />


</androidx.constraintlayout.widget.ConstraintLayout>