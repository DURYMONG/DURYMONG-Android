<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.do_it.DoItDepressionTestFragment">

    <View
        android:id="@+id/v_do_it_depress_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_do_it_depress_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_do_it_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suite_semi_bold"
        android:text="우울감 검사"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_do_it_depress_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_do_it_depress_back" />

    <androidx.cardview.widget.CardView
        android:layout_width="358dp"
        android:layout_height="446dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_do_it_depress_top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_do_it_depress_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/suite_semi_bold"
                android:text="우울감 검사"
                android:textColor="@color/main_purple"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suite_medium"
                android:text="(Depression Test)"
                android:textColor="@color/main_purple"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_do_it_depress_test" />

            <ImageView
                android:id="@+id/iv_do_it_depress_left_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/img_do_it_test_left"
                app:layout_constraintBottom_toTopOf="@id/iv_do_it_depress_bottom"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_do_it_depress_paper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:src="@drawable/ic_do_it_test_paper"
                app:layout_constraintBottom_toBottomOf="@id/iv_do_it_depress_left_box"
                app:layout_constraintStart_toStartOf="@id/iv_do_it_depress_left_box"
                app:layout_constraintTop_toTopOf="@id/iv_do_it_depress_left_box" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/suite_semi_bold"
                android:text="30~40문항"
                android:textColor="@color/main_purple"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="@id/iv_do_it_depress_paper"
                app:layout_constraintStart_toEndOf="@id/iv_do_it_depress_paper"
                app:layout_constraintTop_toTopOf="@id/iv_do_it_depress_paper" />

            <ImageView
                android:id="@+id/iv_do_it_depress_right_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:src="@drawable/img_do_it_test_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_do_it_depress_left_box" />

            <ImageView
                android:id="@+id/iv_do_it_depress_test_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_do_it_test_alarm"
                app:layout_constraintStart_toStartOf="@id/iv_do_it_depress_right_box"
                app:layout_constraintTop_toTopOf="@id/iv_do_it_depress_paper" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/suite_semi_bold"
                android:text="15~20분"
                android:textColor="@color/main_purple"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/iv_do_it_depress_test_alarm"
                app:layout_constraintTop_toTopOf="@id/iv_do_it_depress_test_alarm" />

            <ImageView
                android:id="@+id/iv_do_it_depress_bottom"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:background="@color/main_purple"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/suite_semi_bold"
                android:text="우울감 검사"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_do_it_depress_bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="30dp"
                android:text="검사 하러가기"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_do_it_depress_test_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_do_it_right_arrow"
                app:layout_constraintBottom_toBottomOf="@id/iv_do_it_depress_bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_do_it_depress_bottom" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>