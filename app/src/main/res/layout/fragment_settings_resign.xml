<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <!--top-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_settings_resign_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_settings_resign_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_settings_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suite_semi_bold"
            android:text="탈퇴하기"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="357dp"
        android:layout_height="507dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/v_home_radius_20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_settings_resign_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/suite_semi_bold"
            android:text="정말 두리몽을 떠나시겠어요?"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_settings_resign_date"
            android:layout_width="227dp"
            android:layout_height="40dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/v_settings_radius_20dp_stroke_1dp_purple"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_settings_resign_mong_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suite_semi_bold"
                android:text="코코몽"
                android:textColor="@color/main_purple"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suite_semi_bold"
                android:text="과 함께한지 "
                android:textColor="@color/main_purple"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_settings_resign_mong_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suite_semi_bold"
                android:text="132일"
                android:textColor="@color/main_purple"
                android:textSize="16sp" />
        </LinearLayout>

        <!--폰트 확인 필요 (Mixed)-->
        <LinearLayout
            android:id="@+id/ll_settings_resign_description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_settings_resign_date">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suite_medium"
                android:text="두리몽을 떠나시는 이유가"
                android:textColor="@color/gray4"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_settings_resign_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/suite_semi_bold"
                    android:text="엘리자베스"
                    android:textColor="@color/gray4"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/suite_medium"
                    android:text="님의 마음 속 고민이 해결됐기 때문이길 바라요."
                    android:textColor="@color/gray4"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suite_medium"
                android:text="늘 기다릴테니 지칠 때 언제든 다시 돌아오세요!"
                android:textColor="@color/gray4"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_settings_resign_character"
            android:layout_width="83.34dp"
            android:layout_height="104.6dp"
            android:layout_marginTop="25.44dp"
            android:src="@drawable/img_home_character"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_settings_resign_description1" />

        <TextView
            android:id="@+id/tv_settings_resign_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.96dp"
            android:background="@drawable/img_home_chat_light"
            android:fontFamily="@font/suite_medium"
            android:text="늘 기다리고 있을게요!"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_settings_resign_character" />

        <Button
            android:id="@+id/btn_settings_resign_back"
            android:layout_width="117dp"
            android:layout_height="49.62dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="41dp"
            android:background="@drawable/v_settings_radius_8dp_stroke_1dp_gray3"
            android:fontFamily="@font/suite_semi_bold"
            android:gravity="center"
            android:text="돌아가기"
            android:textColor="@color/gray3"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_settings_resign_description2" />

        <Button
            android:id="@+id/btn_settings_resign"
            android:layout_width="117dp"
            android:layout_height="49.62dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="46dp"
            android:background="@drawable/v_home_radius_8dp"
            android:backgroundTint="@color/main_purple"
            android:fontFamily="@font/suite_semi_bold"
            android:text="탈퇴하기"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_settings_resign_description2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>