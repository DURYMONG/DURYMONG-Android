<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <TextView
        android:id="@+id/tv_create_account_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/suite_semi_bold"
        android:text="아이디를 입력해주세요."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_create_account_id"
        android:layout_width="358dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/v_settings_edit_text_radius_20dp"
        android:fontFamily="@font/suite_medium"
        android:hint="아이디를 입력해 주세요."
        android:paddingHorizontal="12dp"
        android:textColor="@color/gray4"
        android:textColorHint="@color/gray3"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_create_account_id" />

    <Button
        android:id="@+id/btn_create_account_id_next"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/v_home_radius_8dp"
        android:backgroundTint="@color/main_purple"
        android:fontFamily="@font/suite_semi_bold"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>